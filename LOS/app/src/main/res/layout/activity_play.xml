<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:id="@+id/mR"
    tools:context="com.example.irc.los.Play">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hirotab2"
        android:background="@drawable/turn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bgturn"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hirotab2"
        android:text=" 1 ターン経過 "
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="gravity"
        android:id="@+id/turn"/>
    
    <com.example.irc.los.FieldView
        android:layout_width="@dimen/hirotab"
        android:layout_height="@dimen/hirotab"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/mField"/>

    <Button
        android:layout_width="@dimen/hirotab2"
        android:layout_height="@dimen/hirotab2"
        android:background="@drawable/sonar"
        android:onClick="sonarButton"
        android:layout_below="@+id/mField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/sonar"/>
    <TextView
        android:layout_width="@dimen/hirotab2"
        android:layout_height="@dimen/hirotab2"
        android:background="@drawable/limit_number"
        android:onClick="sonarButton"
        android:id="@+id/sonarLimit"
        android:layout_alignTop="@+id/sonar"
        android:layout_toEndOf="@+id/sonar"
        android:text="1"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:textAlignment="gravity"
        android:gravity="center"
        />

</RelativeLayout>
